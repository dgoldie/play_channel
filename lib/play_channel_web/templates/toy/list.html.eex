<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Age</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for toy <- @toys do %>
    <tr>
      <td><%= toy.name %></td>
      <td><%= toy.color %></td>
      <td><%= toy.age %></td>

      <td class="text-right">
        <span><%= link "Show", to: "/live_toys/#{toy.id}", class: "btn btn-default btn-xs" %></span>

      </td>
    </tr>
<% end %>
  </tbody>
</table>
